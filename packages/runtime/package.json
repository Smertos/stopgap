{
  "name": "@stopgap/runtime",
  "version": "0.1.0",
  "description": "Stopgap runtime wrappers and schema helpers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && npm run build:embedded",
    "build:embedded": "esbuild src/embedded.ts --bundle --format=esm --platform=neutral --target=es2022 --outfile=dist/embedded_runtime.js",
    "check": "tsc --noEmit -p tsconfig.json",
    "test": "vitest run"
  },
  "keywords": [
    "stopgap",
    "runtime",
    "postgres"
  ],
  "license": "MIT",
  "devDependencies": {
    "esbuild": "^0.25.11",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "zod": "^4.1.11"
  }
}
